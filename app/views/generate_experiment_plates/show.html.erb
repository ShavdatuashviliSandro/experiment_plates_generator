<!DOCTYPE html>
<html>
<head>
  <title>Experiment Plates</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<br>
<br>
<br>
<div class="row">
  <p id="notice"><%= notice %></p>
</div>

<br/>

<div class="card">
  <div class="card-body">
    <div class="row">
      <div class="col">
        <% plate_quantity = @result.length %>
        <% column_quantity = @result[0][0].length %>

        <% plate_quantity.times do |plate| %>
          <h1>Plate <%= plate + 1 %></h1>
          <table class="table table-bordered">
            <thead>
            <tr>
              <th scope="col"></th>
              <% column_quantity.times do |column_number| %>
                <th scope="col"><%= column_number + 1 %></th>
              <% end %>
            </tr>
            </thead>
            <tbody>
            <% @result[plate].length.times do |row_number| %>
              <tr>
                <th scope="row"><%= row_number + 1 %></th>
                <% column_quantity.times do |column| %>
                  <th scope="row">
                    <% if @result[plate][row_number][column].present? %>
                      <%= @result[plate][row_number][column].join(' X ') %>
                    <% else %>
                      X
                    <% end %>
                  </th>
                <% end %>
              </tr>
            <% end %>

            </tbody>
          </table>
          <br>
          <br>
        <% end %>
      </div>
    </div>
  </div>
</div>
</html>