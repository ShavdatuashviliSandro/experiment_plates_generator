<html lang="en">
<head>
  <title>Laboratory - Doctor sign in</title>
</head>
<style>
    .navbar{
        display: none;
    }
    .container{
        background-color: white !important;
    }
</style>
<br>
<br>
<br>
<div class="col-md-4 border shadow-lg" style="margin-left: 32%;background-color: #f3f5ec;border-radius: 4px">
  <h1 class="text-family" style="margin-left: 32%;margin-top: 2%">Laboratory</h1>
  <small style="margin-left: 36%" class="text-family">Sign in laboratory</small>
  <div style="margin-top: 2%">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group" style="width: 60%;margin-left: 16%">
        <%= f.label :email, class: 'text-family' %>
        <%= f.email_field :email, autofocus: true, autocomplete: 'email',class: 'form-control text-family',placeholder: 'Email' %>
      </div>

      <div class="form-group text-family" style="width: 60%;margin-left: 16%">
        <%= f.label :password, value: 'Password' %>
        <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control',placeholder: 'პაროლი'%>
      </div>
      <div class="form-group" style="margin-top: 4%">
        <%= f.submit 'Sign in', class: 'btn shadow-sm text-family', style: 'background-color: #e1c597;width:200px;height:40px;margin-left: 29%' %>
      </div>
      <br>
      <div class="form-group">
      </div>
    <% end %>
  </div>

</div>

</html>